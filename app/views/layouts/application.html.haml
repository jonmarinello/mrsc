  %body
  .mrsc-container
    =render 'layouts/main_nav_bar'
    = yield
    .well
      %center
        %h3 Have a project we can help with?
        %a.btn.btn-warning{href: url_for(:controller => 'pages', :action => 'contact')} LET'S TALK ABOUT YOUR PROJECT &raquo;
    %center
      %footer
        .social-media
          %h3
            Stay Connected With Us
          %ul.fa-ul{:class => 'nav nav-pills'}
            %li
              %a{:target => '_blank', :href => "skype:jon.marinello.mrsc?chat"}
                %i.fa.fa-2x.fa-skype
            %li
              %a{:target => '_blank', :href => "https://www.facebook.com/missionridgeconsulting"}
                %i.fa.fa-2x.fa-facebook
            %li
              %a{:target => '_blank', :href => "http://twitter.com/jonmarinello"}
                %i.fa.fa-2x.fa-twitter
            %li
              %a{:target => '_blank', :href => "http://google.com/+JonMarinello"}
                %i.fa.fa-2x.fa-google
            %li
              %a{:target => '_blank', :href => "http://www.linkedin.com/in/jonmarinello"}
                %i.fa.fa-2x.fa-linkedin
            %li
              %a{:target => '_blank', :href => "https://github.com/jonmarinello"}
                %i.fa.fa-2x.fa-github-alt
