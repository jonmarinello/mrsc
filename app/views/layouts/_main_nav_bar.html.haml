%nav.div
  %nav.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
    %div{class: 'navbar-header>'}
      %button.navbar-toggle{"data-target" => '#collapse', "data-toggle" => 'collapse', type: 'button'}
        %span.sr-only Toggle Navigation
        - 3.times do
          %span.icon-bar
      %a.navbar-brand{href: root_path}
        %img.img-responsive{alt: 'mrsc', src: asset_path('mrsc.jpg'), width: '80'}
    #collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - %w(projects about services contact).each do |page|
          %li{:class => @active_tab == page ? 'active' : ''}
            =link_to(page.capitalize, { controller: 'pages', action: page })
