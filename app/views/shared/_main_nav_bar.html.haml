%nav.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .navbar-header
    %button.navbar-toggle{"data-target" => '#collapse', "data-toggle" => 'collapse', type: 'button'}
      %span.sr-only Toggle Navigation
      - 3.times do
        %span.icon-bar
    = link_to root_path, class: 'navbar-brand', id: 'navbar-brand' do
      %img.img-responsive#index-image{alt: 'mrsc', src: asset_path('mrsc.png'), width: '100'}
  #collapse.collapse.navbar-collapse
    %ul.nav.navbar-nav
      - %w(services about portfolio contact start_a_project).each do |page|
        %li{class: @active_tab == page ? 'active' : ''}
          =link_to(page.humanize.titleize, { controller: 'pages', action: page })
%h3
  Mission Ridge Software Consulting LLC
